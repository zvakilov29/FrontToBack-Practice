@model List<Product>

@foreach (var item in Model)
{
    <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
        <div class="product-item text-center" data-id="@item.Category.Name.ToLower()">
            <div class="img">
                @if (item.Images.Count > 0)
                {
                    <a href="">
                        <img src="~/img/@(item.Images.FirstOrDefault(i => i.isMain).ImageUrl)" class="img-fluid" alt="">
                    </a>
                }
            </div>
            <div class="title mt-3">
                <h6>@item.Name</h6>
            </div>
            <div class="price">
                <span class="text-black-50">Add to cart</span>
                <span class="text-black-50">$@Math.Truncate(item.Price)</span>
            </div>
        </div>
    </div>
}